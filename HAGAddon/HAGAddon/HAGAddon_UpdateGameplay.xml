<?xml version="1.0" encoding="utf-8"?>
<GameData>
	<!-- ======================================================================= -->
	<!-- 文明 -->
	<!-- ======================================================================= -->
	<!-- 説明文 -->
	<Traits>
		<!-- グルジア -->
		<Update>
			<Where Description="LOC_TRAIT_CIVILIZATION_GOLDEN_AGE_QUESTS_EXPANSION2_DESCRIPTION"/>
			<Set Description="LOC_TRAIT_CIVILIZATION_GOLDEN_AGE_QUESTS_HAGA_DESCRIPTION"/>
		</Update>
	</Traits>
	
	<!-- ======================================================================= -->
	<!-- 区域 -->
	<!-- ======================================================================= -->
	<!-- 説明文 -->
	<Districts>
		<!-- ハンザ -->
		<Update>
			<Where Description="LOC_DISTRICT_HANSA_EXPANSION2_DESCRIPTION"/>
			<Set Description="LOC_DISTRICT_HANSA_HAGA_DESCRIPTION"/>
		</Update>
		<!-- 書院 -->
		<Update>
			<Where Description="LOC_DISTRICT_SEOWON_DESCRIPTION"/>
			<Set Description="LOC_DISTRICT_SEOWON_HAGA_DESCRIPTION"/>
		</Update>
		<!-- 装甲艦 -->
		<Update>
			<Where Description="LOC_UNIT_IRONCLAD_DESCRIPTION"/>
			<Set Description="LOC_UNIT_IRONCLAD_HAGA_DESCRIPTION"/>
		</Update>
	</Districts>
	<!-- 隣接ボーナス -->
	<Adjacency_YieldChanges>
		<!-- 書院 -->
		<Update>
			<Where ID="BaseDistrict_Science"/>
			<Set YieldChange="6"/>
		</Update>
	</Adjacency_YieldChanges>
	
	<!-- ======================================================================= -->
	<!-- ユニット -->
	<!-- ======================================================================= -->
	<!-- 説明文 -->
	<Units>
		<!-- ベルセルク -->
		<Update>
			<Where Description="LOC_UNIT_NORWEGIAN_BERSERKER_DESCRIPTION"/>
			<Set Description="LOC_UNIT_NORWEGIAN_BERSERKER_HAGA_DESCRIPTION"/>
		</Update>
		<!-- デ・ゼーヴェン・プロヴィンシェン -->
		<Update>
			<Where Description="LOC_UNIT_DE_ZEVEN_PROVINCIEN_DESCRIPTION"/>
			<Set Description="LOC_UNIT_DE_ZEVEN_PROVINCIEN_HAGA_DESCRIPTION"/>
		</Update>
		<!-- ミナス・ジェライス -->
		<Update>
			<Where Description="LOC_UNIT_BRAZILIAN_MINAS_GERAES_DESCRIPTION"/>
			<Set Description="LOC_UNIT_BRAZILIAN_MINAS_GERAES_HAGA_DESCRIPTION"/>
		</Update>
	</Units>
	<!-- 戦闘時のアビリティ表示 -->
	<UnitAbilities>
		<!-- ベルセルク -->
		<Update>
			<Where Description="LOC_ABILITY_BERSERKER_RAGE_DESCRIPTION"/>
			<Set Description="LOC_ABILITY_BERSERKER_RAGE_HAGA_DESCRIPTION"/>
		</Update>
	</UnitAbilities>
	<!-- 基本性能 -->
	<Units>
		<!-- ベルセルク -->
		<Update>
			<Where UnitType="UNIT_NORWEGIAN_BERSERKER"/>
			<Set>
				<Combat>42</Combat>
			</Set>
		</Update>
		<!-- デ・ゼーヴェン・プロヴィンシェン：戦列艦ベースに変更 -->
		<Update>
			<Where UnitType="UNIT_DE_ZEVEN_PROVINCIEN"/>
			<Set>
				<Cost>355</Cost>
				<Combat>52</Combat>
				<RangedCombat>62</RangedCombat>
				<StrategicResource>RESOURCE_NITER</StrategicResource>
				<PrereqTech></PrereqTech>
				<PrereqCivic>CIVIC_NATIONALISM</PrereqCivic>
			</Set>
		</Update>
		<!-- ミナス・ジェライス：性能変更、解禁技術を精製技術に変更 -->
		<Update>
			<Where UnitType="UNIT_BRAZILIAN_MINAS_GERAES"/>
			<Set>
				<Combat>67</Combat>
				<RangedCombat>77</RangedCombat>
				<PrereqCivic></PrereqCivic>
				<PrereqTech>TECH_REFINING</PrereqTech>
			</Set>
		</Update>
		<!-- 空母：遠距離攻撃をつける -->
		<Update>
			<Where UnitType="UNIT_AIRCRAFT_CARRIER"/>
			<Set>
				<RangedCombat>65</RangedCombat>
				<Range>2</Range>
			</Set>
		</Update>
		<!-- カドリレーム：解禁技術を帆走術に変更、生産コスト削減 -->
		<Update>
			<Where UnitType="UNIT_QUADRIREME"/>
			<Set>
				<PrereqTech>TECH_SAILING</PrereqTech>
				<Cost>85</Cost>
			</Set>
		</Update>
		<!-- 装甲艦：遠近両用仕様に変更（遠隔昇進、クラスタイプ近接） -->
		<Update>
			<Where UnitType="UNIT_IRONCLAD"/>
			<Set>
				<Combat>55</Combat>
				<RangedCombat>60</RangedCombat>
				<Range>2</Range>
				<PromotionClass>PROMOTION_CLASS_NAVAL_RANGED</PromotionClass>
			</Set>
		</Update>
	</Units>
	<!-- ユニットアビリティ -->
	<UnitAbilityModifiers>
		<!-- 武僧/ニハングが破城槌と攻城塔の効果を得られるようにする -->
		<Row>
			<UnitAbilityType>ABILITY_ENABLE_WALL_ATTACK_PROMOTION_CLASS</UnitAbilityType>
			<ModifierId>HAGA_ENABLE_WALL_ATTACK_WARRIOR_MONK</ModifierId>
		</Row>
		<Row>
			<UnitAbilityType>ABILITY_ENABLE_WALL_ATTACK_PROMOTION_CLASS</UnitAbilityType>
			<ModifierId>HAGA_ENABLE_WALL_ATTACK_NIHANG</ModifierId>
		</Row>
		<Row>
			<UnitAbilityType>ABILITY_BYPASS_WALLS_PROMOTION_CLASS</UnitAbilityType>
			<ModifierId>HAGA_BYPASS_WALLS_WARRIOR_MONK</ModifierId>
		</Row>
		<Row>
			<UnitAbilityType>ABILITY_BYPASS_WALLS_PROMOTION_CLASS</UnitAbilityType>
			<ModifierId>HAGA_BYPASS_WALLS_NIHANG</ModifierId>
		</Row>
	</UnitAbilityModifiers>
	<Modifiers>
		<!-- 武僧/ニハングが破城槌と攻城塔の効果を得られるようにする -->
		<Row>
			<ModifierId>HAGA_ENABLE_WALL_ATTACK_WARRIOR_MONK</ModifierId>
			<ModifierType>MODIFIER_PLAYER_UNIT_ADJUST_ENABLE_WALL_ATTACK_PROMOTION_CLASS</ModifierType>
		</Row>
		<Row>
			<ModifierId>HAGA_ENABLE_WALL_ATTACK_NIHANG</ModifierId>
			<ModifierType>MODIFIER_PLAYER_UNIT_ADJUST_ENABLE_WALL_ATTACK_PROMOTION_CLASS</ModifierType>
		</Row>
		<Row>
			<ModifierId>HAGA_BYPASS_WALLS_WARRIOR_MONK</ModifierId>
			<ModifierType>MODIFIER_PLAYER_UNIT_ADJUST_BYPASS_WALLS_PROMOTION_CLASS</ModifierType>
		</Row>
		<Row>
			<ModifierId>HAGA_BYPASS_WALLS_NIHANG</ModifierId>
			<ModifierType>MODIFIER_PLAYER_UNIT_ADJUST_BYPASS_WALLS_PROMOTION_CLASS</ModifierType>
		</Row>
	</Modifiers>
	<ModifierArguments>
		<!-- ベルセルク -->
		<Update>
			<Where ModifierId="UNIT_STRONG_WHEN_ATTACKING"/>
			<Set>
				<Value>8</Value>
			</Set>
		</Update>
		<!-- 武僧/ニハングが破城槌と攻城塔の効果を得られるようにする -->
		<Row>
			<ModifierId>HAGA_ENABLE_WALL_ATTACK_WARRIOR_MONK</ModifierId>
			<Name>PromotionClass</Name>
			<Value>PROMOTION_CLASS_WARRIOR_MONK</Value>
		</Row>
		<Row>
			<ModifierId>HAGA_ENABLE_WALL_ATTACK_NIHANG</ModifierId>
			<Name>PromotionClass</Name>
			<Value>PROMOTION_CLASS_NIHANG</Value>
		</Row>
		<Row>
			<ModifierId>HAGA_BYPASS_WALLS_WARRIOR_MONK</ModifierId>
			<Name>PromotionClass</Name>
			<Value>PROMOTION_CLASS_WARRIOR_MONK</Value>
		</Row>
		<Row>
			<ModifierId>HAGA_BYPASS_WALLS_NIHANG</ModifierId>
			<Name>PromotionClass</Name>
			<Value>PROMOTION_CLASS_NIHANG</Value>
		</Row>
	</ModifierArguments>
	<!-- アップグレード先 -->
	<UnitUpgrades>
		<!-- カタパルト：トレビュシェットに変更 -->
		<Update>
			<Where Unit="UNIT_CATAPULT"/>
			<Set>
				<UpgradeUnit>UNIT_HAGA_TREBUCHET</UpgradeUnit>
			</Set>
		</Update>
		<!-- 剣士：長剣士に変更 -->
		<Update>
			<Where Unit="UNIT_SWORDSMAN"/>
			<Set>
				<UpgradeUnit>UNIT_HAGA_LONGSWORDSMAN</UpgradeUnit>
			</Set>
		</Update>
		<!-- ヴァル：胸甲騎兵に変更 -->
		<Update>
			<Where Unit="UNIT_INDIAN_VARU"/>
			<Set>
				<UpgradeUnit>UNIT_CUIRASSIER</UpgradeUnit>
			</Set>
		</Update>
		<!-- マムルーク：胸甲騎兵に変更 -->
		<Update>
			<Where Unit="UNIT_ARABIAN_MAMLUK"/>
			<Set>
				<UpgradeUnit>UNIT_CUIRASSIER</UpgradeUnit>
			</Set>
		</Update>
		<!-- サカ族弓騎兵：弩兵に変更 -->
		<Update>
			<Where Unit="UNIT_SCYTHIAN_HORSE_ARCHER"/>
			<Set>
				<UpgradeUnit>UNIT_CROSSBOWMAN</UpgradeUnit>
			</Set>
		</Update>
		<!-- フリゲート艦：戦列艦に変更 -->
		<Update>
			<Where Unit="UNIT_FRIGATE"/>
			<Set>
				<UpgradeUnit>UNIT_HAGA_LINESHIP</UpgradeUnit>
			</Set>
		</Update>
		<!-- ジョング：戦列艦に変更 -->
		<Update>
			<Where Unit="UNIT_INDONESIAN_JONG"/>
			<Set>
				<UpgradeUnit>UNIT_HAGA_LINESHIP</UpgradeUnit>
			</Set>
		</Update>
		<!-- ガレー船：トリレームに変更 -->
		<Update>
			<Where Unit="UNIT_GALLEY"/>
			<Set>
				<UpgradeUnit>UNIT_HAGA_TRIREME</UpgradeUnit>
			</Set>
		</Update>
		<!-- カドリレーム：五段櫂船に変更 -->
		<Update>
			<Where Unit="UNIT_QUADRIREME"/>
			<Set>
				<UpgradeUnit>UNIT_HAGA_QUINQUEREME</UpgradeUnit>
			</Set>
		</Update>
		<!-- キャラベル：コルベットに変更 -->
		<Update>
			<Where Unit="UNIT_CARAVEL"/>
			<Set>
				<UpgradeUnit>UNIT_HAGA_CORVETTE</UpgradeUnit>
			</Set>
		</Update>
		<!-- ナウ船：コルベットに変更 -->
		<Update>
			<Where Unit="UNIT_HAG_PORTUGAL_NAU"/>
			<Set>
				<UpgradeUnit>UNIT_HAGA_CORVETTE</UpgradeUnit>
			</Set>
		</Update>
		<!-- 装甲艦：巡洋艦に変更 -->
		<Update>
			<Where Unit="UNIT_IRONCLAD"/>
			<Set>
				<UpgradeUnit>UNIT_HAGA_CRUISER</UpgradeUnit>
			</Set>
		</Update>
	</UnitUpgrades>
	<!-- 置換設定 -->
	<UnitReplaces>
		<!-- ダムレイはトレビュシェットの置換にする -->
		<Row CivUniqueUnitType="UNIT_KHMER_DOMREY"        ReplacesUnitType="UNIT_HAGA_TREBUCHET"/>
		<!-- 侍、ベルセルク、ヘヴスルは長剣士の置換にする -->
		<Row CivUniqueUnitType="UNIT_JAPANESE_SAMURAI"    ReplacesUnitType="UNIT_HAGA_LONGSWORDSMAN"/>
		<Row CivUniqueUnitType="UNIT_NORWEGIAN_BERSERKER" ReplacesUnitType="UNIT_HAGA_LONGSWORDSMAN"/>
		<Row CivUniqueUnitType="UNIT_GEORGIAN_KHEVSURETI" ReplacesUnitType="UNIT_HAGA_LONGSWORDSMAN"/>
		<!-- デ・ゼーヴェン・プロヴィンシェン：戦列艦の置換に変更 -->
		<Update>
			<Where CivUniqueUnitType="UNIT_DE_ZEVEN_PROVINCIEN"/>
			<Set>
				<ReplacesUnitType>UNIT_HAGA_LINESHIP</ReplacesUnitType>
			</Set>
		</Update>
	</UnitReplaces>
	<!-- AI設定 -->
	<UnitAiInfos>
		<!-- 装甲艦：遠隔を追加 -->
		<Row UnitType="UNIT_IRONCLAD" AiType="UNITTYPE_RANGED"/>
	</UnitAiInfos>
</GameData>
