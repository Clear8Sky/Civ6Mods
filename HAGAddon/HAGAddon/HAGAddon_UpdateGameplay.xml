<?xml version="1.0" encoding="utf-8"?>
<GameData>
	<!-- ======================================================================= -->
	<!-- 文明 -->
	<!-- ======================================================================= -->
	<!-- 説明文 -->
	<Traits>
		<!-- グルジア -->
		<Update>
			<Where Description="LOC_TRAIT_CIVILIZATION_GOLDEN_AGE_QUESTS_EXPANSION2_DESCRIPTION"/>
			<Set Description="LOC_TRAIT_CIVILIZATION_GOLDEN_AGE_QUESTS_HAGA_DESCRIPTION"/>
		</Update>
	</Traits>
	
	<!-- ======================================================================= -->
	<!-- 区域 -->
	<!-- ======================================================================= -->
	<!-- 説明文 -->
	<Districts>
		<!-- ハンザ -->
		<Update>
			<Where Description="LOC_CIVILIZATION_GEORGIA_DESCRIPTION"/>
			<Set Description="LOC_CIVILIZATION_GEORGIA_HAGA_DESCRIPTION"/>
		</Update>
	</Districts>
	<Adjacency_YieldChanges>
		<!-- 書院 -->
		<Update>
			<Where ID="BaseDistrict_Science"/>
			<Set YieldChange="6"/>
		</Update>
	</Adjacency_YieldChanges>
	
	<!-- ======================================================================= -->
	<!-- ユニット -->
	<!-- ======================================================================= -->
	<!-- 説明文 -->
	<Units>
		<!-- ベルセルク -->
		<Update>
			<Where Description="LOC_UNIT_NORWEGIAN_BERSERKER_DESCRIPTION"/>
			<Set Description="LOC_UNIT_NORWEGIAN_BERSERKER_HAGA_DESCRIPTION"/>
		</Update>
	</Units>
	<!-- 戦闘時のアビリティ表示 -->
	<UnitAbilities>
		<!-- ベルセルク -->
		<Update>
			<Where Description="LOC_ABILITY_BERSERKER_RAGE_DESCRIPTION"/>
			<Set Description="LOC_ABILITY_BERSERKER_RAGE_HAGA_DESCRIPTION"/>
		</Update>
	</UnitAbilities>
	<!-- 基本性能 -->
	<Units>
		<!-- ベルセルク -->
		<Update>
			<Where UnitType="UNIT_NORWEGIAN_BERSERKER"/>
			<Set>
				<Combat>42</Combat>
			</Set>
		</Update>
	</Units>
	<!-- ユニットアビリティ -->
	<ModifierArguments>
		<!-- ベルセルク -->
		<Update>
			<Where ModifierId="UNIT_STRONG_WHEN_ATTACKING"/>
			<Set>
				<Value>8</Value>
			</Set>
		</Update>
	</ModifierArguments>
	<!-- アップグレード先 -->
	<UnitUpgrades>
		<!-- カタパルト：トレビュシェットに変更 -->
		<Update>
			<Where Unit="UNIT_CATAPULT"/>
			<Set>
				<UpgradeUnit>UNIT_HAGA_TREBUCHET</UpgradeUnit>
			</Set>
		</Update>
		<!-- 剣士：長剣士に変更 -->
		<Update>
			<Where Unit="UNIT_SWORDSMAN"/>
			<Set>
				<UpgradeUnit>UNIT_HAGA_LONGSWORDSMAN</UpgradeUnit>
			</Set>
		</Update>
		<!-- ヴァル：胸甲騎兵に変更 -->
		<Update>
			<Where Unit="UNIT_INDIAN_VARU"/>
			<Set>
				<UpgradeUnit>UNIT_CUIRASSIER</UpgradeUnit>
			</Set>
		</Update>
		<!-- マムルーク：胸甲騎兵に変更 -->
		<Update>
			<Where Unit="UNIT_ARABIAN_MAMLUK"/>
			<Set>
				<UpgradeUnit>UNIT_CUIRASSIER</UpgradeUnit>
			</Set>
		</Update>
		<!-- サカ族弓騎兵：弩兵に変更 -->
		<Update>
			<Where Unit="UNIT_SCYTHIAN_HORSE_ARCHER"/>
			<Set>
				<UpgradeUnit>UNIT_CROSSBOWMAN</UpgradeUnit>
			</Set>
		</Update>
	</UnitUpgrades>
	<!-- 置換設定 -->
	<UnitReplaces>
		<!-- ダムレイはトレビュシェットの置換にする -->
		<Row CivUniqueUnitType="UNIT_KHMER_DOMREY"        ReplacesUnitType="UNIT_HAGA_TREBUCHET"/>
		<!-- 侍、ベルセルク、ヘヴスルは長剣士の置換にする -->
		<Row CivUniqueUnitType="UNIT_JAPANESE_SAMURAI"    ReplacesUnitType="UNIT_HAGA_LONGSWORDSMAN"/>
		<Row CivUniqueUnitType="UNIT_NORWEGIAN_BERSERKER" ReplacesUnitType="UNIT_HAGA_LONGSWORDSMAN"/>
		<Row CivUniqueUnitType="UNIT_GEORGIAN_KHEVSURETI" ReplacesUnitType="UNIT_HAGA_LONGSWORDSMAN"/>
	</UnitReplaces>
</GameData>
