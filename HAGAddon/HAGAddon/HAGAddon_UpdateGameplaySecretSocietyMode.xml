<?xml version="1.0" encoding="utf-8"?>
<GameData>
	<!-- 排他設定 -->
	<!-- [NOTE]
		 秘密結社の建造物と置換元が同じUBは排他にしないと同じレベルの建造物が2つ建ってしまい、
   	     グラフィック表示がとんでもないことになる上にUB持ちがあからさまに有利になってゲームバランスが壊れる。
   	     どう考えてもバグだと思われます。(憤怒) -->
	<MutuallyExclusiveBuildings>
		<!-- ========== バニラおよび公式DLCの対応用 ========== -->
		<!-- 錬金術協会とマドラサ(アラビア) -->
		<Row Building="BUILDING_ALCHEMICAL_SOCIETY" MutuallyExclusiveBuilding="BUILDING_MADRASA"/>
		<Row Building="BUILDING_MADRASA" MutuallyExclusiveBuilding="BUILDING_ALCHEMICAL_SOCIETY"/>
		<!-- 黄金の宝物庫とグランドバザール(オスマン) -->
		<Row Building="BUILDING_GRAND_BAZAAR" MutuallyExclusiveBuilding="BUILDING_BANK"/>
		<Row Building="BUILDING_BANK" MutuallyExclusiveBuilding="BUILDING_GRAND_BAZAAR"/>
	
		<!-- ========== 前提MODのHonorAndGlory追加文明用 ========== -->
		<!-- 錬金術協会と天文台(ティムール朝) -->
		<Row Building="BUILDING_ALCHEMICAL_SOCIETY" MutuallyExclusiveBuilding="BUILDING_HAG_TIMURID_OBSERVATORY"/>
		<Row Building="BUILDING_HAG_TIMURID_OBSERVATORY" MutuallyExclusiveBuilding="BUILDING_ALCHEMICAL_SOCIETY"/>
	</MutuallyExclusiveBuildings>
	<!-- ユニットアビリティ -->
	<!-- [NOTE]
		 吸血鬼は破城槌の効果が載らないのでこれを直す。
		 吸血鬼は杭を打って滅ぼすということからわざとなのかもしれないが・・・ -->
	<UnitAbilityModifiers>
		<!-- 吸血鬼：破城槌の効果を適用 -->
		<Row>
			<UnitAbilityType>ABILITY_ENABLE_WALL_ATTACK_PROMOTION_CLASS</UnitAbilityType>
			<ModifierId>HAGA_ENABLE_WALL_ATTACK_WALLS_VAMPS</ModifierId>
		</Row>
	</UnitAbilityModifiers>
	<Modifiers>
		<!-- 吸血鬼：破城槌の効果を適用 -->
		<Row>
			<ModifierId>HAGA_ENABLE_WALL_ATTACK_WALLS_VAMPS</ModifierId>
			<ModifierType>MODIFIER_PLAYER_UNIT_ADJUST_ENABLE_WALL_ATTACK_PROMOTION_CLASS</ModifierType>
		</Row>
	</Modifiers>
	<ModifierArguments>
		<!-- 吸血鬼：破城槌の効果を適用 -->
		<Row>
			<ModifierId>HAGA_ENABLE_WALL_ATTACK_WALLS_VAMPS</ModifierId>
			<Name>PromotionClass</Name>
			<Value>PROMOTION_CLASS_VAMPIRE</Value>
		</Row>
	</ModifierArguments>
</GameData>
